@model LoginModel
@using Nop.Web.Models.Customer;
@using Nop.Core;
@using Nop.Core.Infrastructure;
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Login").Text);
    //page class
    Html.AppendPageCssClassParts("html-login-page");

    //register URL with return URL (if specified)
    var registerUrl = Url.RouteUrl("Register");
    if (!String.IsNullOrEmpty(this.Context.Request.QueryString["returnUrl"]))
    {
        var webHelper = EngineContext.Current.Resolve<IWebHelper>
    ();
        registerUrl = webHelper.ModifyQueryString(registerUrl, "returnurl=" + HttpUtility.UrlEncode(this.Context.Request.QueryString["returnUrl"]), null);
    }
}
<div class="page login-page login">

    <div class="container-fluid">
        <div class="row justify-content-center align-items-center no-gutters  text-black">
            <div class="video col-xs-12  col-sm-12 col-md-6 col-lg-6">
                @*d-xs-none  d-sm-none  d-md-block d-lg-block*@
                <video controls="controls" muted loop autoplay>
                    <source src="~/Content/videos/carvideo1.mp4" type="video/mp4" />
                </video>

                
            </div>
            <div class="col-xs-12  col-sm-12 col-md-6 col-lg-6">
                <div class="loginform container">
                    <form class="p-3">
                        <div class="form-group">
                            <label for="email" class=" ">Email address</label>
                            <input type="email" class="form-control " id="email" aria-describedby="emailHelp" placeholder="Enter email">
                            <small id="emailHelp" class="form-text   ">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group">
                            <label for="password" class=" ">Password</label>
                            <input type="password" class="form-control " id="password" placeholder="Password">
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="rememberme">
                            <label class="form-check-label  " for="rememberme">Remember me</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="forgetpassword">
                            <label class="form-check-label  " for="forgetpassword">Forgot password</label>
                        </div>
                        <button type="submit" class="btn btn-dark m-2 p-2">Login</button>
                        <button type="submit" class="btn btn-dark m-2 p-2">Register</button>
                    </form>
                </div>

            </div>
        </div>
        <div class="row justify-content-center align-items-center no-gutters   text-black">
            <div class="col ">
                <div class="smallloginform container">
                    <form class="p-3">
                        <div class="form-group">
                            <label for="email" class="text-white">Email address</label>
                            <input type="email" class="form-control " id="email" aria-describedby="emailHelp" placeholder="Enter email">
                            <small id="emailHelp" class="form-text  text-white">We'll never share your email with anyone else.</small>
                            <small id="emailHelp" class="form-text  text-white alert alert-danger">error invalid email.</small>
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-white">Password</label>
                            <input type="password" class="form-control " id="password" placeholder="Password">
                            <small id="emailHelp" class="form-text  text-white alert alert-danger">error invalid password.</small>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="rememberme">
                            <label class="form-check-label text-white" for="rememberme">Remember me</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="forgetpassword">
                            <label class="form-check-label text-white" for="forgetpassword">Forgot password</label>
                        </div>
                        <button type="submit" class="btn btn-dark m-2 p-2">Login</button>
                        <button type="submit" class="btn btn-dark m-2 p-2">Register</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
